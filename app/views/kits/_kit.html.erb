<div id="<%= dom_id(kit) %>" class="columns kit">
  <div class="column is-1 is-size-4 heading">
    <%= link_to kit.article, edit_kit_path(kit) %>
  </div>

  <div class="column">
    <h2 class="title is-size-4 kit__name"><%= kit.name(:en) %></h2>
    <h2 class="title is-size-4 kit__name"><%= kit.name(:ru) %></h2>
  </div>

  <div class="column is-narrow">
    <ul>
      <li>
        <%= link_to 'редактировать', edit_kit_path(kit) %>
      </li>
      <li>
        <%= link_to 'удалить', kit, method: :delete, class: 'has-text-danger', data: { confirm: 'Вы уверены?' } %>
      </li>
    </ul>
  </div>
</div>
